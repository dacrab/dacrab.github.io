{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "lint": "eslint . --ext .js,.ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.ts,.tsx,.astro --fix",
    "format": "prettier --write .",
    "format:auto": "prettier --check . || prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "ci": "bun run format:auto && bun run lint && bun run type-check && bun run build",
    "fix": "bun run lint:fix && bun run format",
    "check": "bun run lint && bun run type-check && bun run format:check"
  },
  "dependencies": {
    "@astrojs/react": "^4.3.0",
    "astro": "^5.13.2",
    "framer-motion": "^12.18.1",
    "lucide-react": "^0.540.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-intersection-observer": "^9.16.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^24",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9",
    "eslint-plugin-astro": "^1.3.1",
    "lightningcss": "^1.30.1",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.14.1",
    "tsx": "^4.20.3",
    "typescript": "^5"
  }
}
