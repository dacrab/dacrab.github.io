---
const links = [
  { label: 'Work', href: '#projects' },
  { label: 'About', href: '#about' },
  { label: 'Contact', href: '#contact' },
];
---

<header class="fixed top-0 right-0 left-0 z-50 text-white mix-blend-difference">
  <div class="flex items-center justify-between px-6 py-8 md:px-12">
    <a
      href="/"
      class="magnetic inline-block text-sm font-bold tracking-widest uppercase transition-opacity hover:opacity-70"
    >
      Vaggelis Kavouras
    </a>

    <nav>
      <ul class="flex gap-8">
        {
          links.map((link) => (
            <li>
              <a
                href={link.href}
                class="magnetic group relative inline-block py-2 text-sm font-medium tracking-widest uppercase transition-opacity hover:opacity-70"
              >
                {link.label}
                <span class="absolute bottom-1 left-0 h-px w-0 bg-white transition-all duration-300 group-hover:w-full" />
              </a>
            </li>
          ))
        }
        <li class="group relative ml-4">
          <span
            class="magnetic inline-block cursor-pointer rounded-full border border-white/30 bg-white/5 px-4 py-1.5 text-sm font-medium tracking-widest uppercase backdrop-blur-sm transition-all duration-300 hover:bg-white hover:text-black"
          >
            CV
          </span>
          <div
            class="pointer-events-none absolute top-full left-1/2 -translate-x-1/2 pt-2 opacity-0 transition-all duration-300 group-hover:pointer-events-auto group-hover:opacity-100"
          >
            <div
              class="flex flex-col overflow-hidden rounded-xl border border-white/10 bg-zinc-950/90 backdrop-blur-md"
            >
              <a
                href="/CV/VAGGELIS_KAVOURAS_EN.pdf"
                target="_blank"
                class="whitespace-nowrap px-4 py-2 text-xs font-bold tracking-widest text-zinc-400 transition-colors hover:bg-white hover:text-black"
              >
                ENGLISH
              </a>
              <a
                href="/CV/VAGGELIS_KAVOURAS_EL.pdf"
                target="_blank"
                class="whitespace-nowrap border-t border-white/5 px-4 py-2 text-xs font-bold tracking-widest text-zinc-400 transition-colors hover:bg-white hover:text-black"
              >
                GREEK
              </a>
            </div>
          </div>
        </li>
      </ul>
    </nav>
  </div>
</header>
