---
const links = [
  { label: 'Work', href: '#projects' },
  { label: 'About', href: '#about' },
  { label: 'Contact', href: '#contact' },
];
---

<header class="fixed top-0 right-0 left-0 z-50 text-white mix-blend-difference">
  <div class="flex items-center justify-between px-6 py-8 md:px-12">
    <a
      href="/"
      class="magnetic inline-block text-sm font-bold tracking-widest uppercase transition-opacity hover:opacity-70"
    >
      Vaggelis Kavouras
    </a>

    <nav>
      <ul class="flex gap-8">
        {
          links.map((link) => (
            <li>
              <a
                href={link.href}
                class="magnetic group relative inline-block py-2 text-sm font-medium tracking-widest uppercase transition-opacity hover:opacity-70"
              >
                {link.label}
                <span class="absolute bottom-1 left-0 h-px w-0 bg-white transition-all duration-300 group-hover:w-full" />
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>
