---
const links = [
  { label: "Work", href: "#projects" },
  { label: "About", href: "#about" },
  { label: "Contact", href: "#contact" },
];
---

<header class="fixed top-0 left-0 right-0 z-50 mix-blend-difference text-white">
  <div class="flex justify-between items-center px-6 md:px-12 py-8">
    <a href="/" class="magnetic text-sm font-bold tracking-widest uppercase hover:opacity-70 transition-opacity inline-block">
      Vaggelis Kavouras
    </a>
    
    <nav>
      <ul class="flex gap-8">
        {links.map((link) => (
          <li>
            <a 
              href={link.href} 
              class="magnetic text-sm font-medium uppercase tracking-widest hover:opacity-70 transition-opacity relative group inline-block py-2"
            >
              {link.label}
              <span class="absolute bottom-1 left-0 w-0 h-px bg-white transition-all duration-300 group-hover:w-full"></span>
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>
