---
// Contact section with Swiss design principles
---

<section id="contact" class="swiss-section contact-section">
  <div class="swiss-container">
    <!-- Section header -->
    <div class="swiss-section-header">
      <div class="swiss-section-title">Contact</div>
      <h2 class="swiss-heading-2">Let's Work Together</h2>
      <p class="swiss-section-description">
        Ready to bring your ideas to life with clean, functional design.
      </p>
    </div>
    
    <!-- Contact content -->
    <div class="contact-content-simple">
      <!-- Main contact cards -->
      <div class="contact-cards">
        <div class="contact-card primary">
          <div class="contact-icon">📧</div>
          <div class="contact-details">
            <h3 class="contact-title">Email</h3>
            <a href="mailto:vkavouras@proton.me" class="contact-link-primary">vkavouras@proton.me</a>
            <p class="contact-description">Send me a message anytime</p>
          </div>
        </div>
        
        <div class="contact-card">
          <div class="contact-icon">💼</div>
          <div class="contact-details">
            <h3 class="contact-title">LinkedIn</h3>
            <a href="https://linkedin.com/in/vkavouras" class="contact-link-primary" target="_blank" rel="noopener noreferrer">
              /in/vkavouras
            </a>
            <p class="contact-description">Professional networking</p>
          </div>
        </div>
        
        <div class="contact-card">
          <div class="contact-icon">🐙</div>
          <div class="contact-details">
            <h3 class="contact-title">GitHub</h3>
            <a href="https://github.com/dacrab" class="contact-link-primary" target="_blank" rel="noopener noreferrer">
              /dacrab
            </a>
            <p class="contact-description">Open source projects</p>
          </div>
        </div>
      </div>
      
      <!-- Social media section -->
      <div class="social-section">
        <h3 class="social-title">Follow My Work</h3>
        <div class="social-links">
          <a href="mailto:vkavouras@proton.me" class="social-link email" aria-label="Email">
            <div class="social-icon">📧</div>
            <span class="social-label">Email</span>
          </a>
          <a href="https://linkedin.com/in/vkavouras" class="social-link linkedin" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
            <div class="social-icon">💼</div>
            <span class="social-label">LinkedIn</span>
          </a>
          <a href="https://github.com/dacrab" class="social-link github" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
            <div class="social-icon">🐙</div>
            <span class="social-label">GitHub</span>
          </a>
        </div>
      </div>
      
      <!-- Contact CTA -->
      <div class="contact-cta-section">
        <h3 class="cta-title">Ready to collaborate?</h3>
        <p class="cta-description">
          Let's discuss your project and create something exceptional together. I'm always excited to work on interesting challenges.
        </p>
        <div class="cta-actions">
          <a href="mailto:vkavouras@proton.me" class="swiss-button swiss-button-primary">
            Send Message
          </a>
          <a href="/cv/CV_Vaggelis_Kavouras_English.pdf" download class="swiss-button swiss-button-outline">
            Download CV
          </a>
        </div>
      </div>
    </div>
    
    <!-- Swiss decorative grid -->
    <div class="contact-decoration">
      <div class="decoration-grid-large">
        <div class="grid-item"></div>
        <div class="grid-item active"></div>
        <div class="grid-item"></div>
        <div class="grid-item"></div>
        <div class="grid-item active"></div>
        <div class="grid-item"></div>
        <div class="grid-item"></div>
        <div class="grid-item"></div>
        <div class="grid-item active"></div>
      </div>
    </div>
  </div>
  
  <!-- Background decorations -->
  <div class="swiss-decoration swiss-decoration-line contact-line-1"></div>
  <div class="swiss-decoration swiss-decoration-square contact-square-1"></div>
</section>

<!-- Footer -->
<footer class="swiss-footer">
  <div class="swiss-container">
    <div class="footer-content">
      <div class="footer-brand">
        <div class="footer-logo">DaCrab</div>
        <p class="footer-tagline">Swiss design principles meet modern web development</p>
      </div>
      
      <div class="footer-links">
        <a href="#home" class="footer-link">Home</a>
        <a href="#about" class="footer-link">About</a>
        <a href="#projects" class="footer-link">Projects</a>
        <a href="#contact" class="footer-link">Contact</a>
      </div>
      
      <div class="footer-social">
        <a href="mailto:vkavouras@proton.me" class="social-link" aria-label="Email">📧</a>
        <a href="https://linkedin.com/in/vkavouras" class="social-link" aria-label="LinkedIn" target="_blank" rel="noopener noreferrer">💼</a>
        <a href="https://github.com/dacrab" class="social-link" aria-label="GitHub" target="_blank" rel="noopener noreferrer">🐙</a>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p class="footer-copyright">
        © 2025 DaCrab. Built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer">Astro</a> & Swiss design principles.
      </p>
    </div>
  </div>
</footer>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Animate contact cards
    const contactCards = document.querySelectorAll('.contact-card');
    contactCards.forEach((card, index) => {
      const element = card as HTMLElement;
      element.style.opacity = '0';
      element.style.transform = 'translateY(20px)';
      element.style.transition = `opacity 0.5s ease ${index * 0.1}s, transform 0.5s ease ${index * 0.1}s`;
      
      setTimeout(() => {
        element.style.opacity = '1';
        element.style.transform = 'translateY(0)';
      }, 500);
    });
    
    // Animate social links
    const socialLinks = document.querySelectorAll('.social-link');
    socialLinks.forEach((link, index) => {
      const element = link as HTMLElement;
      element.style.opacity = '0';
      element.style.transform = 'scale(0.8)';
      element.style.transition = `opacity 0.4s ease ${index * 0.05}s, transform 0.4s ease ${index * 0.05}s`;
      
      setTimeout(() => {
        element.style.opacity = '1';
        element.style.transform = 'scale(1)';
      }, 800);
    });
    
    // Animate grid items
    const gridItems = document.querySelectorAll('.grid-item');
    let currentIndex = 0;
    
    setInterval(() => {
      gridItems.forEach(item => item.classList.remove('active'));
      gridItems[currentIndex]?.classList.add('active');
      currentIndex = (currentIndex + 1) % gridItems.length;
    }, 2000);
  });
</script>