---
export interface Props {
  variant?: "inline" | "block";
  englishLabel?: string;
  greekLabel?: string;
}
const {
  variant = "inline",
  englishLabel = "EN",
  greekLabel = "EL",
} = Astro.props as Props;
---

<div class={variant === "inline" ? "cv-inline" : "cv-block"}>
    <a href="/cv/CV_Vaggelis_Kavouras_English.pdf" download class="cv-link">
        {englishLabel}
    </a>
