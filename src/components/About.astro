<style>
  .gradient-text {
    color: var(--nord-frost-4);
    font-weight: 700;
  }

  .swiss-section-description {
    max-width: 90%;
  }

  .about-intro {
    margin-bottom: 1.5rem;
  }

  .about-details {
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
  }

  .skills-title {
    color: var(--nord-aurora-purple);
    margin-bottom: 1.5rem;
  }

  /* Keyword Highlighting */
  .keyword-highlight {
    color: var(--nord-frost-3);
    font-weight: 600;
    background: linear-gradient(
      135deg, 
      rgba(129, 161, 193, 0.15), 
      rgba(136, 192, 208, 0.1)
    );
    padding: 0.1rem 0.3rem;
    border-radius: 4px;
    text-shadow: none;
    transition: all 0.3s ease;
    position: relative;
  }

  .keyword-highlight::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(129, 161, 193, 0.1),
      rgba(136, 192, 208, 0.05)
    );
    border-radius: 4px;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
  }

  .keyword-highlight:hover {
    color: var(--nord-aurora-cyan);
    transform: translateY(-1px);
  }

  .keyword-highlight:hover::before {
    opacity: 1;
  }

  .skill-react { background: linear-gradient(135deg, var(--nord-frost-1), transparent); border-radius: 16px; }
  .skill-astro { background: linear-gradient(135deg, var(--nord-aurora-orange), transparent); border-radius: 20px; }
  .skill-typescript { background: linear-gradient(135deg, var(--nord-frost-3), transparent); border-radius: 18px; }
  .skill-css { background: linear-gradient(135deg, var(--nord-aurora-purple), transparent); border-radius: 22px; }
  .skill-performance { background: linear-gradient(135deg, var(--nord-aurora-yellow), transparent); border-radius: 14px; }
  .skill-responsive { background: linear-gradient(135deg, var(--nord-aurora-green), transparent); border-radius: 24px; }
  .skill-design { background: linear-gradient(135deg, var(--nord-frost-2), transparent); border-radius: 12px; }
  .skill-ux { background: linear-gradient(135deg, var(--nord-aurora-red), transparent); border-radius: 26px; }

  .skill-item {
    padding: 1.2rem;
  }

  .about-line {
    top: 10%;
    left: 10%;
    width: 2px;
    height: 100px;
    transform: rotate(-15deg);
    background: var(--nord-frost-2);
    opacity: 0.6;
  }

  .about-square {
    bottom: 15%;
    right: 15%;
    width: 20px;
    height: 20px;
    background: var(--nord-aurora-purple);
    opacity: 0.5;
    transform: rotate(45deg);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const animateElements = document.querySelectorAll('.principle-item, .skill-item');
    const gridCells = document.querySelectorAll('.grid-cell');
    
    let cellIndex = 0;

    // Intersection Observer for animations
    const observer = new IntersectionObserver(
      entries => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate-in');
          }
        });
      },
      { threshold: 0.2, rootMargin: '0px 0px -50px 0px' }
    );

    // Setup animations
    animateElements.forEach(el => {
      const element = el as HTMLElement;
      element.style.opacity = '0';
      element.style.transform = 'translateY(20px)';
      element.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
      observer.observe(el);
    });

    // Styles for .animate-in are now provided globally in globals.css

    // Animate grid cells
    setInterval(() => {
      gridCells.forEach(cell => cell.classList.remove('active'));
      gridCells[cellIndex]?.classList.add('active');
      cellIndex = (cellIndex + 1) % gridCells.length;
    }, 2000);
  });
</script>
