<section
  class="relative flex min-h-screen flex-col justify-center overflow-hidden px-6 pt-32 md:px-12"
  id="hero-section"
>
  <!-- Minimal grid line accent -->
  <div
    class="hero-line absolute top-0 left-6 h-full w-px origin-top scale-y-0 bg-zinc-200 md:left-12"
  >
  </div>

  <div class="relative z-10 mx-auto w-full max-w-[90vw]">
    <div class="overflow-hidden">
      <h1 class="hero-title text-[12vw] leading-[0.85] font-bold tracking-tighter text-zinc-900">
        <span class="inline-block translate-y-full opacity-0">VAGGELIS</span>
      </h1>
    </div>
    <div class="overflow-hidden">
      <h1 class="hero-title text-[12vw] leading-[0.85] font-bold tracking-tighter text-zinc-900">
        <span class="crab-trigger inline-block translate-y-full opacity-0">KAVOURAS</span>
      </h1>
    </div>

    <div class="mt-12 ml-auto flex max-w-4xl flex-col items-start gap-8 md:flex-row md:gap-24">
      <div class="overflow-hidden">
        <p
          class="hero-text max-w-md translate-y-8 text-xl leading-relaxed text-zinc-600 opacity-0 md:text-2xl"
        >
          Full-Stack Web Developer specialized in building high-performance applications with
          Next.js, Astro, and SvelteKit.
        </p>
      </div>

      <div class="hero-actions flex translate-y-8 gap-4 opacity-0">
        <a
          href="#projects"
          class="hero-btn group relative inline-flex h-12 items-center justify-center overflow-hidden rounded-full bg-zinc-900 px-6 font-medium text-white"
        >
          <span>View Projects</span>
          <span class="hero-btn-arrow ml-0 w-0 overflow-hidden">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="ml-2"
            >
              <path d="M7 17L17 7"></path>
              <path d="M7 7h10v10"></path>
            </svg>
          </span>
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  import gsap from 'gsap';

  const tl = gsap.timeline({ defaults: { ease: 'expo.out' } });

  // Initial Load Animation
  tl.to('.hero-line', { scaleY: 1, duration: 1.8 })
    .to('.hero-title span', { y: 0, opacity: 1, duration: 1.5, stagger: 0.1, ease: 'power4.out' }, '-=1.4')
    .to('.hero-text', { opacity: 1, y: 0, duration: 1.2 }, '-=1.0')
    .to('.hero-actions', { opacity: 1, y: 0, duration: 1.2 }, '-=1.0');

  // Parallax Scroll
  gsap.to('.hero-title', {
    y: 100,
    opacity: 0.5,
    scrollTrigger: {
      trigger: '#hero-section',
      start: 'top top',
      end: 'bottom top',
      scrub: 1,
    },
  });

  // Button hover
  const heroBtn = document.querySelector('.hero-btn');
  const heroArrow = document.querySelector('.hero-btn-arrow');
  
  if (heroBtn && heroArrow) {
    heroBtn.addEventListener('mouseenter', () => {
      gsap.to(heroBtn, { backgroundColor: '#27272a', duration: 0.3 });
      gsap.to(heroArrow, { width: 24, duration: 0.5, ease: 'power3.out' });
    });
    heroBtn.addEventListener('mouseleave', () => {
      gsap.to(heroBtn, { backgroundColor: '#18181b', duration: 0.3 });
      gsap.to(heroArrow, { width: 0, duration: 0.5, ease: 'power3.out' });
    });
  }
</script>
