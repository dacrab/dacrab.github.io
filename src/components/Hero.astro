<section
  class="relative flex min-h-screen flex-col justify-center overflow-hidden px-6 pt-32 md:px-12"
  id="hero-section"
>
  <!-- Minimal grid line accent -->
  <div
    class="hero-line absolute top-0 left-6 h-full w-px origin-top scale-y-0 bg-zinc-200 md:left-12"
  >
  </div>

  <div class="relative z-10 mx-auto w-full max-w-[90vw]">
    <div class="overflow-hidden">
      <h1 class="hero-title text-[12vw] leading-[0.85] font-bold tracking-tighter text-zinc-900">
        <span class="inline-block">VAGGELIS</span>
      </h1>
    </div>
    <div class="overflow-hidden">
      <h1 class="hero-title text-[12vw] leading-[0.85] font-bold tracking-tighter text-zinc-900">
        <span class="inline-block">KAVOURAS</span>
      </h1>
    </div>

    <div class="mt-12 ml-auto flex max-w-4xl flex-col items-start gap-8 md:flex-row md:gap-24">
      <div class="overflow-hidden">
        <p
          class="hero-text max-w-md translate-y-8 text-xl leading-relaxed text-zinc-500 opacity-0 md:text-2xl"
        >
          Web Developer focused on clarity, performance, and maintainability. I craft digital
          experiences with precision and care.
        </p>
      </div>

      <div class="hero-actions flex translate-y-8 gap-4 opacity-0">
        <a
          href="#projects"
          class="group relative inline-flex h-12 items-center justify-center overflow-hidden rounded-full bg-zinc-900 px-8 font-medium text-white transition-all duration-300 hover:w-40 hover:bg-zinc-800"
        >
          <span class="mr-2 transition-all duration-300 group-hover:-translate-x-1">Work</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="-translate-x-2 opacity-0 transition-all duration-300 group-hover:translate-x-0 group-hover:opacity-100"
          >
            <path d="M7 17L17 7"></path>
            <path d="M7 7h10v10"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  import gsap from 'gsap';

  const tl = gsap.timeline({ defaults: { ease: 'power3.out' } });

  // Initial Load Animation
  tl.to('.hero-line', { scaleY: 1, duration: 1.5 })
    .from(
      '.hero-title span',
      {
        y: '100%',
        duration: 1.2,
        stagger: 0.1,
        rotate: 2,
      },
      '-=1'
    )
    .to('.hero-text', { opacity: 1, y: 0, duration: 1 }, '-=0.8')
    .to('.hero-actions', { opacity: 1, y: 0, duration: 1 }, '-=0.8');

  // Parallax Scroll Effect
  gsap.to('.hero-title', {
    y: 100,
    opacity: 0.5,
    scrollTrigger: {
      trigger: '#hero-section',
      start: 'top top',
      end: 'bottom top',
      scrub: true,
    },
  });
</script>
