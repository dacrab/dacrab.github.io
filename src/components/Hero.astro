<section class="min-h-screen flex flex-col justify-center px-6 md:px-12 pt-32 relative overflow-hidden" id="hero-section">
  <!-- Minimal grid line accent -->
  <div class="absolute top-0 left-6 md:left-12 w-px h-full bg-zinc-200 origin-top scale-y-0 hero-line"></div>

  <div class="max-w-[90vw] mx-auto w-full relative z-10">
    <div class="overflow-hidden">
      <h1 class="text-[12vw] leading-[0.85] font-bold tracking-tighter text-zinc-900 hero-title">
        <span class="inline-block">VAGGELIS</span>
      </h1>
    </div>
    <div class="overflow-hidden">
      <h1 class="text-[12vw] leading-[0.85] font-bold tracking-tighter text-zinc-900 hero-title">
        <span class="inline-block">KAVOURAS</span>
      </h1>
    </div>
    
    <div class="mt-12 flex flex-col md:flex-row items-start gap-8 md:gap-24 max-w-4xl ml-auto">
      <div class="overflow-hidden">
        <p class="text-xl md:text-2xl text-zinc-500 leading-relaxed max-w-md hero-text opacity-0 translate-y-8">
          Web Developer focused on clarity, performance, and maintainability.
          I craft digital experiences with precision and care.
        </p>
      </div>
      
      <div class="flex gap-4 hero-actions opacity-0 translate-y-8">
        <a 
          href="#projects" 
          class="group relative inline-flex h-12 items-center justify-center overflow-hidden rounded-full bg-zinc-900 px-8 font-medium text-white transition-all duration-300 hover:bg-zinc-800 hover:w-40"
        >
          <span class="mr-2 transition-all duration-300 group-hover:-translate-x-1">Work</span>
          <svg 
            xmlns="http://www.w3.org/2000/svg" 
            width="16" 
            height="16" 
            viewBox="0 0 24 24" 
            fill="none" 
            stroke="currentColor" 
            stroke-width="2" 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            class="opacity-0 -translate-x-2 transition-all duration-300 group-hover:opacity-100 group-hover:translate-x-0"
          >
            <path d="M7 17L17 7" />
            <path d="M7 7h10v10" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  const tl = gsap.timeline({ defaults: { ease: 'power3.out' } });

  // Initial Load Animation
  tl.to('.hero-line', { scaleY: 1, duration: 1.5 })
    .from('.hero-title span', {
      y: '100%',
      duration: 1.2,
      stagger: 0.1,
      rotate: 2
    }, '-=1')
    .to('.hero-text', { opacity: 1, y: 0, duration: 1 }, '-=0.8')
    .to('.hero-actions', { opacity: 1, y: 0, duration: 1 }, '-=0.8');

  // Parallax Scroll Effect
  gsap.to('.hero-title', {
    y: 100,
    opacity: 0.5,
    scrollTrigger: {
      trigger: '#hero-section',
      start: 'top top',
      end: 'bottom top',
      scrub: true
    }
  });
</script>
