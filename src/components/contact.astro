<style>
  .contact-min { padding-top: var(--space-20); padding-bottom: var(--space-20); }
  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: var(--space-4);
    margin-top: var(--space-8);
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-4);
    border: 1px solid var(--color-border);
    background: var(--color-background);
    color: var(--color-text);
    text-decoration: none;
    transition: background-color var(--transition-fast), border-color var(--transition-fast), transform var(--transition-fast);
  }

  .contact-item.primary { background: var(--color-surface); border-width: 2px; border-color: var(--color-primary); }
  .contact-item:hover { border-color: var(--color-primary); transform: translateY(-2px); }
  .icon { display: inline-flex; width: 28px; height: 28px; color: var(--color-text); }
  .meta { display: grid; gap: 2px; }
  .label { font-size: var(--font-size-xs); text-transform: uppercase; letter-spacing: .05em; color: var(--color-text-secondary); font-weight: 600; }
  .value { font-weight: 600; color: var(--color-text); }

  .contact-extra { display: flex; align-items: center; gap: var(--space-3); margin-top: var(--space-8); }
  /* shared CV + highlight utilities are global */

  @media (max-width: 768px) {
    .contact-min { padding-top: var(--space-16); padding-bottom: var(--space-16); }
  }
</style>
