---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 | Page Not Found">
  <main class="flex min-h-screen flex-col items-center justify-center bg-zinc-950 px-6 text-white">
    <h1 class="mb-4 text-[20vw] leading-none font-bold tracking-tighter text-zinc-800">404</h1>
    <p class="mb-8 text-xl text-zinc-400">Page not found</p>
    <a
      href="/"
      class="rounded-full bg-white px-6 py-3 font-medium text-zinc-900 transition-colors hover:bg-zinc-200"
    >
      Back to Home
    </a>
  </main>
</Layout>
