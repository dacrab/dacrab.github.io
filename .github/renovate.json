{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "npm:unpublishSafe"
  ],
  "schedule": ["before 6am on monday"],
  "timezone": "Europe/Athens",
  "labels": ["dependencies"],
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true,
  "packageRules": [
    {
      "description": "Group all non-major dependencies into a single PR",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "description": "Group all major dependencies into a single PR",
      "matchUpdateTypes": ["major"],
      "groupName": "all major dependencies",
      "groupSlug": "all-major"
    },
    {
      "description": "Group Astro and React related packages",
      "matchPackageNames": ["astro", "@astrojs/**"],
      "groupName": "Astro packages",
      "groupSlug": "astro"
    },
    {
      "description": "Group React packages",
      "matchPackageNames": ["react", "react-dom", "react-**"],
      "groupName": "React packages",
      "groupSlug": "react"
    },
    {
      "description": "Group TypeScript and ESLint packages",
      "matchPackageNames": ["typescript", "@typescript-eslint/**", "eslint", "eslint-**"],
      "groupName": "Linting packages",
      "groupSlug": "linting"
    },
    {
      "description": "Automerge patch updates for trusted packages",
      "matchUpdateTypes": ["patch"],
      "matchPackageNames": [
        "astro",
        "@astrojs/**",
        "typescript",
        "@types/**"
      ],
      "automerge": true,
      "automergeType": "pr"
    }
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "assigneesFromCodeOwners": true,
    "reviewersFromCodeOwners": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"]
  },
  "bun": {
    "enabled": true
  },
  "prHourlyLimit": 2,
  "prConcurrentLimit": 3,
  "branchConcurrentLimit": 5
}
